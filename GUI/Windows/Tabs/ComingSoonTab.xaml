<local:RubeusTab x:Class="RubeusGui.Windows.Tabs.ComingSoonTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RubeusGui.Windows.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="BaseTab_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RubeusGui;component/GlobalStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource TabBackgroundColor}">
        <StackPanel Margin="8,12">
            <TextBlock>
                Coming soon. Check for updates here: <Hyperlink x:Name="LnkRubeusGuiGithub" Click="LnkRubeusGuiGithub_Click">https://github.com/VbScrub/Rubeus-GUI</Hyperlink>
            </TextBlock>
            <WrapPanel Margin="0,5,0,0">
                <TextBlock Text="You are currently on version " />
                <TextBlock x:Name="LblVersion" Margin="1,0,0,0" Text="0.0.0.0" />
            </WrapPanel>
        </StackPanel>

    </Grid>
</local:RubeusTab>
